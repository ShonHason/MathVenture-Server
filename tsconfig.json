{
  "compilerOptions": {

    "module": "commonjs", 
    "esModuleInterop": true, 
    "target": "es6",
    "moduleResolution": "node", 
    "sourceMap": true, 
    "outDir": "dist",
    "strict": true, 
    "jsx": "react-jsx", 
    "skipLibCheck": true, 
    "resolveJsonModule": true, 
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"],
  "lib": ["dom", "esnext"]
}
